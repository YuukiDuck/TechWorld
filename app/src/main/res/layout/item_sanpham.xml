<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:gravity="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="10sp"
    android:layout_marginTop="10sp"
    android:background="@drawable/khung_item"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/img_Item_Anh_San_Pham"
        android:layout_width="200sp"
        android:layout_height="200sp"
        android:layout_gravity="center"
        android:adjustViewBounds="true"
        android:gravity="center" />

    <TextView
        android:id="@+id/txt_ten_san_pham"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10sp"
        android:layout_marginTop="5sp"
        android:fontFamily="@font/baloothambi2regular"
        android:text="Tên sản phẩm "
        android:textSize="20sp" />

    <TextView
        android:id="@+id/txttrang_thai_san_pham"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10sp"
        android:layout_marginTop="5sp"

        android:fontFamily="@font/baloothambi2regular"
        android:text="Trạng thái: còn hàng "
        android:textSize="20sp" />

    <TextView
        android:id="@+id/txttrang_thai_san_pham1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10sp"
        android:layout_marginTop="5sp"
        android:fontFamily="@font/baloothambi2regular"
        android:text="Trạng thái: hết hàng "
        android:textColor="@color/mau_do"
        android:textSize="20sp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/txtgia_san_pham"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10sp"
        android:layout_marginTop="5sp"
        android:fontFamily="@font/baloothambi2regular"
        android:text="Gia san pham "
        android:textSize="20sp" />

    <TextView
        android:id="@+id/txtsoluong"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10sp"
        android:layout_marginTop="5sp"
        android:fontFamily="@font/baloothambi2regular"
        android:text="so luong"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/txtten_loai_san_pham2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10sp"
        android:layout_marginTop="5sp"
        android:fontFamily="@font/baloothambi2regular"
        android:text="ten loai san pham: "
        android:textSize="20sp" />

    <TextView
        android:id="@+id/txtmo_ta"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10sp"
        android:layout_marginTop="5sp"
        android:layout_marginBottom="10sp"
        android:fontFamily="@font/baloothambi2regular"
        android:text="mô tả "
        android:textSize="20sp" />
</LinearLayout>