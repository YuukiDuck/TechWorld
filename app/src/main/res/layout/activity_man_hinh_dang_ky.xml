<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/khung_radius_top_30"
    tools:context=".man_hinh_dang_ky">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imgTroVeDangNhap"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="30sp"
            android:layout_marginTop="45sp"
            android:src="@drawable/ic_back" />

        <TextView
            android:id="@+id/txt_Dang_ky"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="50sp"
            android:layout_marginTop="30sp"
            android:fontFamily="@font/baloothambi2semibold"
            android:text="Đăng ký"
            android:textColor="@color/mau_chu"
            android:textSize="37sp" />

        <LinearLayout
            android:id="@+id/lin_khung_Dang_ky"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_Dang_ky"
            android:background="@color/white"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="20sp"
                android:orientation="vertical">

                <!-- Họ tên -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/baloothambi2semibold"
                    android:text="Họ tên"
                    android:textColor="@color/mau_chu"
                    android:paddingTop="10sp"
                    android:textSize="20sp" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tiL_Nhap_Ho_Ten_DangKy"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/edt_Nhap_Ho_Ten_DangKy"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/baloothambi2regular"
                        android:hint="Nhập họ và tên"
                        android:imeOptions="actionNext"
                        android:textSize="18sp" />
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Giới tính -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/baloothambi2semibold"
                    android:text="Giới tính"
                    android:textColor="@color/mau_chu"
                    android:textSize="20sp" />

                <RadioGroup
                    android:id="@+id/rg_gioi_tinh"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/rbnam"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Nam"
                        android:textSize="18sp" />

                    <RadioButton
                        android:id="@+id/rbnu"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Nữ"
                        android:textSize="18sp" />

                    <RadioButton
                        android:id="@+id/rbkhac"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Khác"
                        android:textSize="18sp" />
                </RadioGroup>

                <!-- Số điện thoại -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/baloothambi2semibold"
                    android:text="Số điện thoại"
                    android:textColor="@color/mau_chu"
                    android:textSize="20sp" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tiL_Nhap_SDT_DangKy"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/edt_Nhap_SDT_DangKy"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/baloothambi2regular"
                        android:hint="Nhập số điện thoại"
                        android:imeOptions="actionNext"
                        android:inputType="number"
                        android:textSize="18sp" />
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Địa chỉ -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/baloothambi2semibold"
                    android:text="Địa chỉ"
                    android:textColor="@color/mau_chu"
                    android:textSize="20sp" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tiL_Nhap_Dia_Chi_DangKy"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/edt_Nhap_Dia_Chi_DangKy"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/baloothambi2regular"
                        android:hint="Nhập địa chỉ"
                        android:imeOptions="actionNext"
                        android:textSize="18sp" />
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Email -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/baloothambi2semibold"
                    android:text="Email"
                    android:textColor="@color/mau_chu"
                    android:textSize="20sp" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tiL_Nhap_Email_DangKy"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/edt_Nhap_Email_DangKy"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/baloothambi2regular"
                        android:hint="Nhập email"
                        android:imeOptions="actionNext"
                        android:textSize="18sp" />
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Mật khẩu -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/baloothambi2semibold"
                    android:text="Mật khẩu"
                    android:textColor="@color/mau_chu"
                    android:textSize="20sp" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tipL_Nhap_Pass_DangKy"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/edt_Nhap_Pass_DangKy"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/baloothambi2regular"
                        android:hint="Nhập mật khẩu"
                        android:imeOptions="actionNext"
                        android:textSize="18sp" />
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Nhập lại mật khẩu -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/baloothambi2semibold"
                    android:text="Nhập lại mật khẩu"
                    android:textColor="@color/mau_chu"
                    android:textSize="20sp" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tiL_Nhap_Lai_Pass_DangKy"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/edt_Nhap_Lai_Pass_DangKy"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/baloothambi2regular"
                        android:hint="Nhập lại mật khẩu"
                        android:imeOptions="actionNext"
                        android:textSize="18sp" />
                </com.google.android.material.textfield.TextInputLayout>

            </LinearLayout>
        </LinearLayout>

        <Button
            android:id="@+id/btnDongY"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lin_khung_Dang_ky"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20sp"
            android:background="@drawable/khung_button_dangnhap"
            android:fontFamily="@font/baloothambi2semibold"
            android:gravity="center"
            android:text="Đăng ký"
            android:textSize="25sp" />
    </RelativeLayout>
</ScrollView>
